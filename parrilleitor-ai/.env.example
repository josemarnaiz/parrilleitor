# Auth0 Configuration
AUTH0_SECRET=[REDACTED-AUTH0-SECRET]
AUTH0_BASE_URL=https://yourdomain.com
AUTH0_ISSUER_BASE_URL=https://your-tenant.region.auth0.com
AUTH0_CLIENT_ID=[REDACTED-CLIENT-ID]
AUTH0_CLIENT_SECRET=[REDACTED-CLIENT-SECRET]
AUTH0_AUDIENCE=https://your-tenant.region.auth0.com/api/v2/
